generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model reset_password_token {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token     String    @unique
  user_id   String?   @db.Uuid
  create_at DateTime? @default(now()) @db.Timestamp(6)
  expire_at DateTime  @db.Timestamp(6)
  users     users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id                   String                 @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  first_name           String                 @db.VarChar(255)
  last_name            String?                @db.VarChar(225)
  email                String                 @unique @db.VarChar(255)
  password             String?                @db.VarChar(255)
  role                 role                   @default(user)
  reset_password_token reset_password_token[]
}

model applications {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  first_name      String?   @db.VarChar(255)
  last_name       String?   @db.VarChar(255)
  gender          gender
  email           String?   @db.VarChar(255)
  phone_number    Int?
  city            String?   @db.VarChar(255)
  education_level String?   @db.VarChar(255)
  program_id      String?   @db.Uuid
  programs        programs? @relation(fields: [program_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model banners {
  id             String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String? @db.VarChar(255)
  image          String?
  description_en String?
  description_ar String?
}

model category {
  id                      String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  category_name_en        String     @db.VarChar(255)
  category_name_ar        String     @db.VarChar(255)
  category_description_en String?
  category_description_ar String?
  slug                    String?    @db.VarChar(255)
  logo                    String?    @db.VarChar(255)
  programs                programs[]
}

model programs {
  id                     String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  program_title_en       String         @db.VarChar(255)
  program_title_ar       String         @db.VarChar(255)
  program_description_en String?
  program_description_ar String?
  program_location_en    String?        @db.VarChar(255)
  program_location_ar    String?        @db.VarChar(255)
  duration               String?        @db.VarChar(255)
  category_id            String?        @db.Uuid
  slug                   String?        @unique @db.VarChar(255)
  image                  String?        @db.VarChar(255)
  applications           applications[]
  category               category?      @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

enum role {
  admin
  user
}

enum gender {
  male
  female
}
