generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model reset_password_token {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token     String    @unique
  user_id   String?   @db.Uuid
  create_at DateTime? @default(now()) @db.Timestamp(6)
  expire_at DateTime  @db.Timestamp(6)
  users     users?    @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id                   String                 @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  first_name           String                 @db.VarChar(255)
  last_name            String?                @db.VarChar(225)
  email                String                 @unique @db.VarChar(255)
  password             String?                @db.VarChar(255)
  role                 role                   @default(user)
  reset_password_token reset_password_token[]
}

model applications {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String    @db.VarChar(255)
  gender          gender
  email           String    @db.VarChar(255)
  phone_number    String    @db.VarChar(255)
  location        String    @db.VarChar(255)
  education_level String    @db.VarChar(255)
  program_id      String?   @db.Uuid
  major           String    @db.VarChar(255)
  date_of_birth   DateTime  @db.Date
  created_at      DateTime? @default(now()) @db.Timestamp(6)
  programs        programs? @relation(fields: [program_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model banners {
  id             String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String  @db.VarChar(255)
  image          String
  description_en String?
  description_ar String?
}

model programs {
  id                     String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  program_title_en       String         @db.VarChar(255)
  program_title_ar       String         @db.VarChar(255)
  program_description_en String?
  program_description_ar String?
  duration_h             String         @db.VarChar(255)
  slug                   String         @unique @db.VarChar(255)
  image                  String?        @db.VarChar(255)
  program_type           program_type   @default(life_programs)
  duration_d             String?        @db.VarChar(255)
  feature                Boolean?       @default(false)
  applications           applications[]
}

model our_team {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  member_type    member_type? @default(professional_programs)
  name_en        String       @db.VarChar(255)
  name_ar        String       @db.VarChar(255)
  description_en String?
  description_ar String?
  position_en    String       @db.VarChar(255)
  position_ar    String       @db.VarChar(255)
  image          String?      @db.VarChar(255)
  display_order  Int?
}

model settings {
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key_name_en String? @db.VarChar(255)
  key_name_ar String? @db.VarChar(255)
  value_en    String?
  value_ar    String?
}

model partners {
  id      String @id(map: "clients_pkey") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name_en String @db.VarChar(255)
  logo    String @db.VarChar(255)
  name_ar String @db.VarChar(255)
}

enum role {
  admin
  user
}

enum gender {
  male
  female
}

enum member_type {
  founder
  life_programs
  professional_programs
}

enum program_type {
  life_programs
  professional_programs
}
